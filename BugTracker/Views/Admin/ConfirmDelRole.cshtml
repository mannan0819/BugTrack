@model Microsoft.AspNetCore.Identity.IdentityRole

@{
    ViewData["Title"] = "DeleteRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete Role</h1>

<form asp-action="DeleteRole">
    <div>

        <div class="alert alert-warning" role="alert">
            <p>
                <strong>Deleting this data will permanently remove the role, and take it away from users.</strong>
            </p>
        </div>
        <input type="hidden" asp-for=@Model.Id />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
        </dl>
    </div>

    <div>
        <div class="alert alert-danger" role="alert">
            <p><strong>Do you want to permanently delete this role?</strong></p>

            <div class="pl-1">
                <input type="submit" class="btn btn-outline-danger" value="Delete Role" />
                <a asp-action="ViewRoles" class="btn btn-outline-primary">No, back to Roles</a>
            </div>
        </div>
    </div>
</form>
<div>
    <a asp-action="ViewRoles">Back to Roles</a>
</div>
